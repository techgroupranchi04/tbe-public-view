<script>
  function showView(viewId) {
    document.getElementById('dashboard-view').classList.add('d-none');
    document.getElementById('problems-view').classList.add('d-none');
    document.getElementById('notifications-view').classList.add('d-none');
    document.getElementById(viewId + '-view').classList.remove('d-none');
  }

  document.getElementById('problemForm').addEventListener('submit', function(e) {
    e.preventDefault();
    document.getElementById('confirmation').classList.remove('d-none');
    setTimeout(() => {
      const modal = bootstrap.Modal.getInstance(document.getElementById('problemModal'));
      modal.hide();
    }, 2000);
  });
</script>

